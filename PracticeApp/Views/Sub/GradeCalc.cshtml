@{
    ViewData["Title"] = "Grade Calculator";
}

@model GradeCalcModel;



<!--my calculator-->
<h2>Grade Calculator</h2>
<h4>Calculate your final grade here</h4>
<p>Please enter the percentage scored for each of the following categories:</p>
<p>(Do not include the percentage sign)</p>
<div class="form">
    <form method="post">
        <label>Assignments: </label>
        <input id="assignments" type="number" asp-for="Assignments" /><br />
        <label>Quizzes: </label>
        <input id="quizzes" type="number" asp-for="Quizzes" /><br />
        <label>INTEX: </label>
        <input id="intex" type="number" asp-for="INTEX" /><br />
        <input id="calcbutton" type="submit" value="Calculate" />

        <div asp-validation-summary="All"></div>
    </form>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="js/gradecalculator.js"></script>